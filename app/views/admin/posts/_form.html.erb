<%= javascript_include_tag Ckeditor.cdn_url %>
<%= form_with(model: @post, url: (@post.persisted? ? admin_post_path(@post) : admin_posts_path), method:
  (@post.persisted? ? :patch : :post), multipart: true, class: 'custom-form' ) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'custom-label' %>
      <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :title_description, class: 'custom-label' %>
      <%= form.text_field :title_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: 'custom-label' %>
    <%= form.cktext_area :content, class: 'form-control' %>
  </div>
</br>

<%= form.submit @post.persisted? ? 'Update Post' : 'Create Post' , class: 'btn btn-primary' %>
<% end %>