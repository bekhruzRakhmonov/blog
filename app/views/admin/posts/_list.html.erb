<div class="mt-3">
    <!-- Add New Post Button -->
    <div class="mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add New Post</h5>
          <%= link_to 'Create Post', new_admin_post_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Title Description</th>
          <th>Content</th>
          <th>Created</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td><%= post.title_description %></td>
            <td>
              <%= truncate(strip_tags(post.content.body.to_plain_text), length: 200, omission: '...') %>
            </td>
            <td>
              <%= time_ago_in_words(post.created_at) %> ago
            </td>
            <td class="text-end">
              <%= link_to 'Read more', post_path(post), class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-secondary' %>
              <%= link_to 'Delete', admin_post_path(post), method: :delete, data: {
                confirm: 'Are you sure you want to delete this post?'
              }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  