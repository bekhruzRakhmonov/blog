<div class="row mt-3" style="min-height: 800px;">
    <!-- Add New Project Button -->
    <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Add New Project</h5>
            <%= link_to 'Add Project', new_admin_project_path, class: 'btn btn-success' %>
          </div>
        </div>
    </div>
    <% @projects.each do |project| %>
        <div class="col">
            <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= link_to project.title, admin_project_path(project) %>
                        </h5>
                        <p class="card-text">
                            <%= project.description %>
                        </p>
                            <%= link_to 'Read more' , admin_project_path(project), class: 'btn btn-primary' %>

                            <!-- Add Edit link -->
                            <%= link_to 'Edit' , edit_admin_project_path(project), class: 'btn btn-secondary' %>

                            <!-- Add Delete link -->
                            <%= link_to 'Delete' , admin_project_path(project), method: :delete, data: {
                                confirm: 'Are you sure you want to delete this project?' }, class: 'btn btn-danger' %>
                    </div>
            </div>
        </div>
    <% end %>
</div>