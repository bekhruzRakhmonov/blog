<div class="container mt-3" style="min-height: 800px;">   
  <!-- Add New Admin Button -->
  <div class="mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Add New Admin</h5>
        <%= link_to 'Add Admin', "/", class: 'btn btn-success' %>
      </div>
    </div>
  </div> 
  <table class="table">
    <thead>
      <tr>
        <th>Profile Image</th>
        <th>Name</th>
        <th>Email</th>
        <th>Last changed</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |admin| %>
        <tr>
          <td>
            <% if admin.image.present? %>
              <%= image_tag admin.image, class: "img-thumbnail", width: 50 %>
            <% else %>
              No Image
            <% end %>
          </td>
          <td><%= admin.name %></td>
          <td><%= admin.email %></td>
          <td><%= time_ago_in_words(admin.updated_at) %> ago</td>

          <td class="text-end">
              <%= link_to 'Info', admin_admin_path(admin), class: 'btn btn-primary' %>
              <%= link_to 'Edit', edit_admin_admin_path(admin), class: 'btn btn-secondary' %>
              <%= link_to 'Delete', admin_admin_path(admin), method: :delete, data: {
                confirm: 'Are you sure you want to delete this admin?'
              }, class: 'btn btn-danger' %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  