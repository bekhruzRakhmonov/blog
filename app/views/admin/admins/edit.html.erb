<h1>Edit Admin</h1>

<%= form_with(model: @admin, url: admin_admin_path(@admin), method: :patch) do |form| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= form.label :image %>
        <br>
        <%= image_tag @admin.image, class: "rounded", style: "width: 200px;" %>
        <br>

        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control", disabled: true%>

        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", disabled: true%>

        <%= form.label :about %>
        <%= form.text_area :about, class: "form-control" %>

        <%= form.label :admin %>
        <%= form.check_box :admin %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-lg-12">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="container text-center mt-4">
    <%= link_to 'Back' , admin_admins_path, class: "btn btn-secondary" %>
</div>
