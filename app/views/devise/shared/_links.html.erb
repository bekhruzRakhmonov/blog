<div class="container text-center mt-4">
  <% if controller_name != 'sessions' %>
    Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: 'link-offset-2 link-underline link-underline-opacity-10' %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'link-offset-2 link-underline link-underline-opacity-10' %> |
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: 'link-offset-2 link-underline link-underline-opacity-10' %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'link-offset-2 link-underline link-underline-opacity-10' %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'link-offset-2 link-underline link-underline-opacity-10' %>
  <% end %>
  <br>
  <br>
  <% if devise_mapping.omniauthable? %>
  <% resource_class.omniauth_providers.each do |provider| %>
    <% provider_name = OmniAuth::Utils.camelize(provider) %>
    <% button_classes = provider == 'github' ? 'btn btn-dark mb-2' : 'btn btn-dark mb-2' %>
    
    <%= link_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: button_classes do %>
      <%= image_tag 'github.png', alt: 'GitHub Logo', style: 'width: 16px; height: 16px; margin-right: 5px; margin-bottom: 4px;' %>
      Sign in with <%= provider_name %>
    <% end %>
  <% end %>
<% end %>




</div>
