                <% first_image_tag = post.content.body.to_html.match(/<img [^>]*src=["']([^"']+)/)&.captures&.first %>
                    <% if first_image_tag %>
                      <div class="post-preview-image">
                        <%= image_tag(first_image_tag, class: "img-fluid rounded") %>
                      </div>
                    <% end %>
              </div>
            </a>
          <% end %>
        </div>
      </div>
      <div class="card mb-4">
        <div class="card-body">
          <h3 class="card-title">Follow Me</h3>
          <ul class="social-icons">
            <a href="https://github.com/bekhruzRakhmonov" style="color:#fff; text-decoration: none;"><li class="social-icon"><%= image_tag 'github.png' %> GitHub</li></a><br>
            <a href="https://linkedin.com/in/bekhruzbek-rakhmonov-903862225" style="color:#fff; text-decoration: none;"><li class="social-icon"><%= image_tag 'linkedin.png' %> LinkedIn</li></a><br>
            <a href="https://twitter.com/BehruzRaxmonov" style="color:#fff; text-decoration: none;"><li class="social-icon"><%= image_tag 'twitter.png' %> Twitter</li></a>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
